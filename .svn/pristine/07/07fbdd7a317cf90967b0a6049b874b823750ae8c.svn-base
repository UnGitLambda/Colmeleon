    def test_euclidean_dist(self):
        """
        Test the euclidean distance function
        """
        self.assertIsInstance(euclidean_dist(self.data1,self.data1), float)
        self.assertIsInstance(euclidean_dist(self.data1b,self.data1c), float)
        self.assertEqual(euclidean_dist(self.data1,self.data1), 0)
